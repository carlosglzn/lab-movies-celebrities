<h2>Movie Selected:</h2>
<br/>
{{#with movie}}

    <h5>Title: {{title}}</h5>
    <p>Genre: {{genre}}</p>
    <p>Plot: {{plot}}</p>
    <p>Cast:</p>

    {{#each cast}}
        <p>Name: {{name}}</p>
        <p>Occupation: {{occupation}}</p>
        <p>Catch Phrase: {{catchPhrase}}</p>       
    {{/each}}

    <a href="/movies/{{_id}}/edit">Edit</a>
    <form action="/movies/{{_id}}/delete" method="POST">
        <button>Delete</button>
    </form>
   
{{/with}}
